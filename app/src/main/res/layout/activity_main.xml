<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esiea.vresscimar.transportifio.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logosmall"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtChooseStation"
        android:text="@string/textChooseStation"
        android:layout_below="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/station"
        android:layout_below="@+id/txtChooseStation"
        android:hint="@string/hintChooseStation" />

    <Button
        android:text="@string/buttonChooseStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChooseStation"
        android:layout_below="@+id/station"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/buttonSeeUsOnMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSeeUsOnMaps"
        android:layout_below="@+id/btnChooseStation"
        android:layout_alignParentStart="true" />
</RelativeLayout>
